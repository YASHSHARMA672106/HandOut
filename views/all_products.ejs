<% include _layouts/header %>
    
          
<p style="margin:0;">
	<form action= "/products" method= "GET" class= "form-inline mt-5" style=" display:flex; justify-content: center; align-items:center;">
		<div class= "form-group">
			<input type= "text" name= "search" placeholder= "search items" class= "form-control">
			<button class= "form-control btn btn-warning">Search</button>
		</div>
</form>
</p>
</div>
</div>
</div>



<% products.forEach(function(p){ %>
            
	<div class="pcontainer ml-4 mr-3 mt-5">
    <div class="card">
        <div class="imgBx">
            <img src="/product_images/<%= p.id %>/<%= p.image %>">
        </div>
        <div class="contentBx">
            <h2><%= p.title %></h2>
            <div class="size">
            <h3>$<%= parseFloat(p.price).toFixed(2) %></h3>
            </div>
            <div class="color">
            <h3>Colour :</h3>
            <span></span>
            <span></span>
            <span></span>
            </div>
            <a href="/products/<%= p.category %>/<%= p.slug %>">See More</a>
        </div>
    </div>
</div>
        <% }); %>
			   
<% include _layouts/footer %>
